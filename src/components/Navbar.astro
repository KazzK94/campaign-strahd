---
import BatIcon from "../assets/icons/BatIcon.astro";
---

<nav
  class="h-16 z-50 bg-gradient-to-br from-red-950/40 via-transparent to-red-950/50 text-white shadow-md shadow-red-400/10"
>
  <div
    class="flex items-center justify-between px-4 sm:px-0 container w-full h-full mx-auto"
  >
    <!-- Brand -->
    <a href="/" class="md:hidden text-xl font-bold">
      <BatIcon class="size-9" />
    </a>

    <!-- Hamburger Menu -->
    <input type="checkbox" id="menu-toggle" class="hidden peer" />
    <label
      for="menu-toggle"
      class="cursor-pointer flex flex-col gap-1.5 md:hidden"
    >
      <span class="block w-6 h-0.5 bg-white"></span>
      <span class="block w-6 h-0.5 bg-white"></span>
      <span class="block w-6 h-0.5 bg-white"></span>
    </label>

    <!-- Menu -->
    <ul
      class="absolute left-0 top-16 space-y-3 md:space-y-0 opacity-0 pointer-events-none peer-checked:opacity-100 peer-checked:pointer-events-auto transition-all duration-200 p-4 backdrop-blur w-full bg-red-950/90 text-center text-xl md:static md:flex md:flex-row md:gap-8 md:w-full md:opacity-100 md:pointer-events-auto md:bg-transparent md:justify-center md:items-center"
    >
      <li>
        <a class="hover:text-red-600 transition-colors" href="/">Inicio</a>
      </li>
      <li>
        <a class="hover:text-red-600 transition-colors" href="/pcs"
          >Protagonistas</a
        >
      </li>
      <li>
        <a class="hover:text-red-600 transition-colors" href="/npcs">NPCs</a>
      </li>
      <li>
        <a class="hover:text-red-600 transition-colors" href="/lore">Historia</a
        >
      </li>
      <li>
        <a class="hover:text-red-600 transition-colors" href="/areas">Zonas</a>
      </li>
    </ul>
  </div>
</nav>
