---
import BatIcon from "../assets/icons/BatIcon.astro";
import SkullIcon from "../assets/icons/SkullIcon.astro";
import VampireIcon from "../assets/icons/VampireIcon.astro";

const {
  name,
  src,
  description,
  isDead = false,
  isVampire = false,
} = Astro.props;
---

<article
  class="group rounded-lg relative border-2 border-rose-800/60 shadow-md shadow-red-200/20 overflow-hidden hover:scale-105 transition-all duration-300"
>
  <img
    class={`w-full h-full object-cover [aspect-ratio:1/1] hover:saturate-150 ${isDead && "saturate-[0.15]"} ${isVampire && "sepia-[30%]"}`}
    src={src}
    alt={`Imagen de ${name}`}
  />
  <div
    class={`absolute inset-0 text-center px-2 flex flex-col justify-end items-center pb-4 bg-gradient-to-t from-black via-transparent to-transparent ${
      description && "group-hover:via-black/30"
    } to-transparent`}
  >
    <h2
      class="text-red-500 group-hover:text-red-600 transition-colors duration-300 text-2xl font-bold"
    >
      {name}
    </h2>
    {
      description && (
        <p class="max-h-0 overflow-hidden opacity-0 group-hover:max-h-24 group-hover:opacity-100 transition-all duration-300 ease-in-out text-gray-200 text-sm">
          {description}
        </p>
      )
    }
    {
      isDead && (
        <div class="absolute top-2 right-2">
          <SkullIcon class="size-16 p-1 text-gray-300 group-hover:text-gray-100 rounded-full bg-black/10 backdrop-blur-sm transition-colors duration-300" />
        </div>
      )
    }

    {
      isVampire && (
        <div class="absolute top-2 right-2">
          <VampireIcon
            class="size-16 p-1 pt-2 text-red-500 group-hover:text-red-600/80 rounded-full bg-black/15 backdrop-blur-md transition-colors duration-300"
          />
        </div>
      )
    }
  </div>
</article>
