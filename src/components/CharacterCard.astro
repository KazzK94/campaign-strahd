---
const { name, src, description } = Astro.props;
---

<article
  class="group rounded-lg relative border-2 border-rose-900/60 shadow-md shadow-red-200/20 overflow-hidden hover:scale-105 hover:saturate-150 transition-all duration-300"
>
  <img
    class="w-full h-full object-cover [aspect-ratio:1/1]"
    src={src}
    alt={`Imagen de ${name}`}
  />
  <div
    class={`absolute inset-0 text-center px-2 flex flex-col justify-end items-center pb-4 bg-gradient-to-t from-black via-black/10 ${
      description && "group-hover:via-black/80"
    } to-transparent`}
  >
    <h2
      class="text-red-500 group-hover:text-red-700 transition-colors duration-300 text-2xl font-bold"
    >
      {name}
    </h2>
    {
      description && (
        <p class="max-h-0 overflow-hidden opacity-0 group-hover:max-h-24 group-hover:opacity-100 transition-all duration-300 ease-in-out text-gray-200 text-sm">
          {description}
        </p>
      )
    }
  </div>
</article>
