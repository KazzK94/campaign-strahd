---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="md:relative h-full">
    <img
      class="hidden md:block h-full w-full object-cover absolute inset-0 -z-10"
      src="/strahds-curse-wallpaper.png"
      alt="Strahd's Curse Wallpaper"
    />

    <div class="w-full h-full bg-black/20 relative">
      <div
        class="mt-4 px-2 md:mt-0 md:px-0 md:absolute bottom-12 left-12 min-w-[40%] flex flex-col justify-center text-center"
      >
        <h1 class="text-3xl md:text-5xl font-bold mb-1.5">
          La Maldici√≥n de Strahd
        </h1>
        <p class="text-lg md:text-xl italic">
          Una aventura mastereada por <strong
            class="text-red-400/80 font-semibold">Corven Dallas</strong>
        </p>

        <div
          class="container mx-auto grid grid-cols-1 sm:grid-cols-2 mt-4 gap-1.5 md:gap-3"
        >
          <a
            href="/pcs"
            class="bg-red-800 border-2 border-red-950 text-lg text-center py-3 md:py-4 rounded-lg shadow-md hover:bg-red-900 transition-all duration-300"
          >
            Ver Personajes
          </a>
          <a
            href="/npcs"
            class="bg-red-800 border-2 border-red-950 text-lg text-center py-3 md:py-4 rounded-lg shadow-md hover:bg-red-900 transition-all duration-300"
          >
            Ver NPCs
          </a>
          <a
            href="/areas"
            class="bg-red-800 border-2 border-red-950 text-lg text-center py-3 md:py-4 rounded-lg shadow-md hover:bg-red-900 transition-all duration-300"
          >
            Ver Zonas
          </a>
          <a
            href="/lore"
            class="bg-red-800 border-2 border-red-950 text-lg text-center py-3 md:py-4 rounded-lg shadow-md hover:bg-red-900 transition-all duration-300"
          >
            Ver Historia
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
